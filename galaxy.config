# App tier base template configuration
# These sync patterns define which files are Galaxy-managed vs user-owned

sync_patterns:
  galaxy_infrastructure:
    - "src/galaxy.py"
    - "src/requirements.txt"
    - "Dockerfile"
    - "build.sh"
    - "helm/*"
    - ".galaxy/*"
    - ".github/workflows/deploy.yml"
  user_owned:
    - "requirements.txt"
    - "README.md"
    - ".gitignore"